      <item value="0x09">10 OS</item>
      <item value="0x0A">11 JCL</item>
      <item value="0x0B">12 USER</item>
    </parameter>
    <script state="run">
      <action condition="(maincpu.pb@C422==00)">maincpu.pb@C422=param</action>
    </script>
  </cheat>

